<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".ui.DMT.AddBeneficiaryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgAddBeneficiaryBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/add_beneficiary_title"
            app:fontFamily="@font/noto_sans_bold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/actionbar_title_size"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_wallet" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hintTextAppearance="@style/TextLabel"
                android:layout_weight="1"
                android:layout_marginRight="5dp">

                <EditText
                    android:id="@+id/edtAddBeneficiaryFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_20_size"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:lines="1"
                    android:hint="@string/add_beneficiary_first_name" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:hintTextAppearance="@style/TextLabel"
                android:layout_weight="1"
                android:layout_marginLeft="5dp">

                <EditText
                    android:id="@+id/edtAddBeneficiaryLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_20_size"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:lines="1"
                    android:hint="@string/add_beneficiary_last_name" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextAppearance="@style/TextLabel"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">

            <EditText
                android:id="@+id/edtAddBeneficiaryMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_20_size"
                android:inputType="number"
                android:maxLength="10"
                android:fontFamily="@font/noto_sans_bold"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:lines="1"
                android:hint="@string/add_beneficiary_mobile" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextAppearance="@style/TextLabel"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">

            <EditText
                android:id="@+id/edtAddBeneficiaryAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_20_size"
                android:fontFamily="@font/noto_sans_bold"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:lines="1"
                android:hint="@string/add_beneficiary_account_number" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextAppearance="@style/TextLabel"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">

            <EditText
                android:id="@+id/edtAddBeneficiaryBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_20_size"
                android:fontFamily="@font/noto_sans_bold"
                android:inputType="textEmailAddress"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:lines="1"
                android:hint="@string/add_beneficiary_bank" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextAppearance="@style/TextLabel"
            android:layout_weight="1"
            android:layout_marginLeft="5dp">

            <EditText
                android:id="@+id/edtAddBeneficiaryIfsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/common_20_size"
                android:fontFamily="@font/noto_sans_bold"
                android:textStyle="bold"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/colorBlack"
                android:lines="1"
                android:hint="@string/add_beneficiary_ifsc" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/add_beneficiary_account_type"
            android:textSize="@dimen/common_title_size"
            android:fontFamily="@font/noto_sans_bold"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <Spinner
            android:id="@+id/spnAddBeneficiaryAccountType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/add_beneficiary_account_type"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/textColorSecondary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnAddBeneficiaryCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/noto_sans"
                android:background="@drawable/curve_button_white"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/btn_small_text_size" />

            <Button
                android:id="@+id/btnAddBeneficiarySubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/noto_sans"
                android:background="@drawable/curve_button_colorprimary"
                android:text="@string/submit"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/btn_small_text_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>